<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_listview_item">

    <ImageView
        android:id="@+id/imgNavigationImage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="fitXY"
        android:src="@mipmap/user_icon" />

    <TextView
        android:id="@+id/txtNavigationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#757575"
        android:layout_alignBottom="@+id/imgNavigationImage"
        android:layout_alignTop="@+id/imgNavigationImage"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/imgNavigationImage"
        android:gravity="center_vertical"
        android:text="@string/app_name"
        android:textAppearance="?android:textAppearanceMedium" />
</RelativeLayout>